<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
  <!-- background color -->
  <item
    android:bottom="6px"
    android:left="6px"
    android:right="6px"
    android:top="6px">
    <shape android:shape="rectangle" >
      <solid android:color="@color/colorTransparent" />
    </shape>
  </item>
  <!-- over top shadow -->
  <item>
    <shape android:shape="rectangle" >
      <gradient
        android:angle="-90"
        android:centerColor="#00FFFFFF"
        android:centerY="0.8"
        android:endColor="#00FFFFFF"
        android:startColor="#9A000000"
        android:type="linear" />
    </shape>
  </item>
  <!-- over bottom shadow -->
  <item>
    <shape android:shape="rectangle" >
      <gradient
        android:angle="90"
        android:centerColor="#00FFFFFF"
        android:centerY="0.8"
        android:endColor="#00FFFFFF"
        android:startColor="#9A000000"
        android:type="linear" />
    </shape>
  </item>
</layer-list>