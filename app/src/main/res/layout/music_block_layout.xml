<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

    <variable
      name="music"
      type="com.thienbinh.halioplayer.model.Music" />
  </data>

  <LinearLayout
    android:layout_width="@dimen/music_block_width"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:foreground="@drawable/music_thumbnail_mask">

      <ImageView
        android:layout_width="@dimen/music_block_width"
        android:layout_height="@dimen/music_block_width"
        android:scaleType="centerCrop"
        android:src="@{music.thumbnail}"
        app:bindGrayScale="@{true}" />
    </androidx.cardview.widget.CardView>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:maxLines="1"
      android:singleLine="true"
      android:text="@{music.title}"
      android:textColor="@color/colorWhite"
      android:textSize="16sp" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:maxLines="1"
      android:singleLine="true"
      android:text="@{music.singer}"
      android:textColor="@color/textColorDarken"
      android:textSize="12sp" />
  </LinearLayout>
</layout>