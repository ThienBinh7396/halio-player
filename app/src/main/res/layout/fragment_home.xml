<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:paddingVertical="@dimen/dimen_24"
  android:paddingStart="@dimen/dimen_24"
  android:paddingEnd="@dimen/dimen_0"
  tools:context=".ui.fragment.HomeFragment">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/tvTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="@font/averta_extra"
      android:text="Made for you"
      android:textColor="@color/colorWhite"
      android:textSize="20sp"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/tvCaption"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tvTitle"
      android:layout_marginTop="@dimen/dimen_4"
      android:text="Daily Mixes"
      android:textSize="14sp" />

    <ImageButton
      android:layout_width="@dimen/dimen_14"
      android:layout_height="@dimen/dimen_14"
      android:layout_below="@id/tvTitle"
      android:layout_alignParentEnd="true"
      android:layout_marginEnd="@dimen/dimen_24"
      android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />
  </RelativeLayout>

</LinearLayout>